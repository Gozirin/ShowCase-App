<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.gozirin.showcase">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="me.gozirin.showcase.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="me.gozirin.showcase.SecondActivity"
            android:theme="@style/NoActionBar" />

        <activity
            android:name="me.gozirin.showcase.QueueActivity"
            android:theme="@style/FullScreenTheme" />

        <activity android:name="me.gozirin.showcase.RecyclerViewActivity" />

        <activity android:name="me.gozirin.showcase.CustomQueueActivity" />

        <activity android:name="me.gozirin.showcase.AnimatedActivity" />
    </application>

</manifest>